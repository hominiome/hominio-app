# Hominio Monorepo Environment Variables
# Copy this file to .env and fill in your values
# In SvelteKit, vars without PUBLIC_ prefix are secret by default

# Domain Configuration (PUBLIC_ vars are accessible in client and server)
PUBLIC_DOMAIN_ROOT=localhost:4200
PUBLIC_DOMAIN_APP=localhost:4202
PUBLIC_DOMAIN_WALLET=localhost:4201
PUBLIC_DOMAIN_SYNC=localhost:4203

# Authentication Secrets (secret by default - no PUBLIC_ prefix needed)
AUTH_SECRET=dev-secret-key-change-in-production
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Database (secret by default)
WALLET_POSTGRES_SECRET=postgresql://user:password@host/database

# Polar Integration (secret by default)
POLAR_API_KEY=your-polar-api-key
POLAR_WEBHOOK_SECRET=your-polar-webhook-secret
